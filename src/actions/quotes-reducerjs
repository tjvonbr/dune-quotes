import axios from "axios"

export const QUOTES_START = "QUOTES_START"
export const FETCH_QUOTES_SUCCESS = "FETCH_QUOTES_SUCCESS"
export const FETCH_QUOTES_FAIL = "FETCH_QUOTES_FAIL"

export const fetchQuotes = () => dispatch => {
  dispatch({ type: QUOTES_START })
  axios.get("http://localhost:3000/quotes")
    .then(res => {
      console.log(res)
      dispatch({ type: FETCH_QUOTES_SUCCESS })
    })
    .catch(err => {
      console.log(err)
      dispatch({ type: FETCH_QUOTES_FAIL })
    })
}
